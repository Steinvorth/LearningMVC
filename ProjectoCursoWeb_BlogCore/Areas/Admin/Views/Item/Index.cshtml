@{
    ViewData["Title"] = "Item List";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Item List</h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"> <i class="fa-solid fa-plus"></i> Create Item </a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblItem" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Image</th>                
                <th>Creation Date</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/item.js"></script>
}